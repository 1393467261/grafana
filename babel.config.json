// Lingui extract uses babel outside of webpack, so we need to move the config up so babel can find it
// without the webpack import
// TODO: remove the config from the webpack dir (or make this just stub it out)

{
  "babelrc": false,
  // Note: order is bottom-to-top and/or right-to-left
  "presets": [
    [
      "@babel/preset-env",
      {
        "bugfixes": true,
        "browserslistEnv": "production",
        "useBuiltIns": "entry",
        "corejs": "3.10"
      }
    ],
    [
      "@babel/preset-typescript",
      {
        "allowNamespaces": true,
        "allowDeclareFields": true
      }
    ],
    [
      "@babel/preset-react",
      {
        "runtime": "automatic"
      }
    ]
  ],
  "plugins": [
    [
      "@babel/plugin-transform-typescript",
      {
        "allowNamespaces": true,
        "allowDeclareFields": true
      }
    ],
    ["@babel/plugin-proposal-object-rest-spread", { "loose": true }],
    "@babel/plugin-transform-react-constant-elements",
    "@babel/plugin-proposal-nullish-coalescing-operator",
    "@babel/plugin-proposal-optional-chaining",
    "@babel/plugin-syntax-dynamic-import", // needed for `() => import()` in routes.ts
    "angularjs-annotate",
    "macros" // needed for lingui
  ]
}
